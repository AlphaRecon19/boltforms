{% form_theme form 'boltforms_fields.twig' %}

{% if error %}
    <p class="boltform-error">{{ error }}</p>
{% endif %}
{% if message %}
    <p class="boltform-message">{{ message }}</p>
{% endif %}
{% if not sent %}
{% if recaptcha_theme %}
<script>
    var RecaptchaOptions = {
        theme : '{{ recaptcha_theme }}'
    };
</script>
{% endif %}
<form action="#" method="post" class="boltform boltform-{{ formname }}" enctype="multipart/form-data">
    {{ form_widget(form) }}

    {% if recaptcha_html %}
    <div class="boltform-row">
        <label for="form_message" class="required">ReCaptcha</label>
        {{ recaptcha_html|raw }}
    </div>
    {% endif %}
    <input type="submit" name="submit" value="{{ button_text }}" class="boltform-submit" />
</form>
{% endif %}


{% form_theme form 'boltforms_fields.twig' %}

{% if error %}
    <p class="boltform-error">{{ error }}</p>
{% endif %}

{% if message %}
    <p class="boltform-message">{{ message }}</p>
{% endif %}

{{ html }}

{% if not sent %}
    {% if recaptcha.theme|default('clean') %}
    <script>
        var RecaptchaOptions = {
            theme : '{{ recaptcha.theme }}'
        };
    </script>
    {% endif %}

    {{ form_start(form) }}
        {{ form_errors(form) }}

        {% for key, value in fields  %}
            {% if value.type != 'submit' %}
                {{ form_row(form[key]) }}
            {% endif %}
        {% endfor %}

        {% if recaptcha.html|default(false) %}
        <div class="boltform-row">
            <label for="form_message" class="required">ReCaptcha</label>
            {{ recaptcha.html|raw }}
        </div>
        {% endif %}

        <br>

        {{ form_row(form.submit) }}
    {{ form_end(form) }}

{% endif %}

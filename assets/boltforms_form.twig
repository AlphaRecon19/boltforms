
{% form_theme form 'boltforms_fields.twig' %}

<div class="boltform">
{% if error %}
    <p class="boltform-error">{{ error }}</p>
{% endif %}

{% if message %}
    <p class="boltform-message">{{ message }}</p>
{% endif %}

{% if not sent %}

    {{ html_pre }}

    {% if recaptcha.theme|default('clean') %}
    <script>
        var RecaptchaOptions = {
            theme : '{{ recaptcha.theme }}'
        };
    </script>
    {% endif %}

    {{ form_start(form) }}
        {{ form_errors(form) }}

        {% for key, value in fields  %}
            {% if value.type != 'submit' %}
                {{ form_row(form[key]) }}
            {% endif %}
        {% endfor %}

        {% if recaptcha.html|default(false) %}

            {% if not recaptcha.valid %}
            <ul>
                <li>{{ recaptcha.error_message }}</li>
            </ul>
            {% endif %}

            <div class="boltform-row">
                <label for="form_message" class="required">{{ recaptcha.label }}</label>
                {{ recaptcha.html|raw }}
            </div>

        {% endif %}

        <br>

        {{ form_row(form.submit) }}
    {{ form_end(form) }}

{% else %}
    {{ html_post }}
{% endif %}
</div>
